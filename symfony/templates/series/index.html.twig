{% extends 'base.html.twig' %}

{% block title %}Liste des séries{% endblock %}

{% block body %}
    <h1>Liste des séries</h1>

    <hr/>
    Recherche

    <form method="POST">
        </br>
        Par genre :
        <select name="genre">
            <option></option>
        {% for genre in genres %}
            <option>{{ genre.name }}</option>
        {% endfor %}
        </select>

        </br>
        Par titre :
        <input type="text" name="title"></input>
        
        </br>
        Annuler la recherche ?
        <input type="checkbox" name="reset" value="Yes">
        <input type="submit" name="Rechercher"/>
        <hr/>

    </form>

    <table class="table">
        <thead>
            <tr>
                <th>Title</th>
                <th>Poster</th>
            </tr>
        </thead>
        <tbody>
        {% for series in series %}
            <tr>
                <td><a href={{ path('series_show', {'id': series.id})}}> {{ series.title }} </a></td>
                <td><img src={{ path('poster', {'id': series.id} ) }}></td>
            </tr>
        {% else %}
            <tr>
                <td colspan="11">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}

{% block nav %}
<div class="navigation">
    {{ knp_pagination_render(series) }}
</div>
{% endblock %}