{% extends 'base.html.twig' %}

{% block title %}Season{% endblock %}

{% block body %}
    <h1>Season</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Serie</th>
                <td>{{ season.series.title }}</td>
            </tr>
            <tr>
                <th>Number</th>
                <td>{{ season.number }}</td>
            </tr>
            <tr>
                <th>Episodes</th>
                <td>
                    <ul>
                    {% for episode in season.episodes %}
                        <li>{{ episode.number }} : {{ episode.title }} | Rating : {{ episode.imdbrating}}</li>
                    {% endfor %}
                    </ul>
                </td>
            </tr>   
        </tbody>
    </table>

    <a href="{{ path('series_show', {"id": season.series.id}) }}">Retour à la série</a>
    {% if app.user %}
        {% if app.user.admin %}
            <a href="{{ path('season_edit', {'id': season.id}) }}">edit</a>
            {{ include('season/_delete_form.html.twig') }}
        {% endif %}
    {% endif %}
{% endblock %}
