{% extends 'base.html.twig' %}

{% block title %}Se connecter
{% endblock %}

{% block body %}
	<form method="post">
		{% if error %}
			<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
		{% endif %}

		{% if app.user %}
			<div class="mb-3">
				You are logged in as
				{{ app.user.username }},
				<a href="{{ path('app_logout') }}">Logout</a>
			</div>
		{% endif %}

		<h1 class="h3 mb-3 font-weight-normal text-center">Veuillez vous connecter</h1>
        <div class="row justify-content-center">
		    <label for="inputEmail" class="text-center">Email</label>
		    <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="col-md-3" required autofocus>
        </div>
	
        <div class="row justify-content-center">
            <label for="inputPassword" class="text-center">Mot de passe</label>
            <input type="password" name="password" id="inputPassword" class="col-md-3" required>
        </div> 
        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">


        <div class="row">
            <div class="col text-center">
                <div class="checkbox mb-3">
                    <label>
                        <input type="checkbox" name="_remember_me">
                        Remember me
                    </label>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col text-center">
                <button class="btn btn-lg btn-success" type="submit">
                    Se connecter
                </button>
            </div>
        </div>
    </form>
{% endblock %}
